CREATE DATABASE IF NOT EXISTS ${DB_NAME};

-- 创建唯一用户，并授予权限
CREATE USER IF NOT EXISTS '${DB_NAME_USER}'@'%' IDENTIFIED BY '${DB_PASSWORD}';
GRANT ALL PRIVILEGES ON ${DB_NAME}.* TO '${DB_NAME_USER}'@'%' WITH GRANT OPTION;

FLUSH PRIVILEGES;

-- 可选：修改 root 密码
ALTER USER 'root'@'localhost' IDENTIFIED BY '12345678';
